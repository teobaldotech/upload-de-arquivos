<!DOCTYPE html>
<html lang="pt-BR">
<head>
  <meta charset="UTF-8">
  <title>Selecionar e Baixar Arquivo Local</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      background-color: #f2f2f2;
      padding: 30px;
      text-align: center;
    }
    input[type="file"] {
      margin-top: 20px;
    }
    .download-btn {
      margin-top: 20px;
      padding: 10px 20px;
      background-color: #28a745;
      color: white;
      border: none;
      border-radius: 5px;
      cursor: pointer;
    }
    .download-btn:disabled {
      background-color: #ccc;
      cursor: not-allowed;
    }
    .message {
      margin-top: 15px;
      color: green;
      font-weight: bold;
    }
    .error {
      color: red;
    }
  </style>
</head>
<body>

  <h1>Selecionar e Fazer Download de Arquivo Local</h1>

  <input type="file" id="fileInput"><br>

  <button class="download-btn" id="downloadBtn" disabled>Baixar Arquivo</button>

  <div class="message" id="message"></div>

  <script>
    const fileInput = document.getElementById('fileInput');
    const downloadBtn = document.getElementById('downloadBtn');
    const message = document.getElementById('message');

    let selectedFile;
    const maxSizeMB = 5; // Limite de tamanho: 5MB
    const allowedTypes = ['image/png', 'image/jpeg', 'application/pdf'];

    fileInput.addEventListener('change', function () {
      selectedFile = this.files[0];
      message.classList.remove('error');

      if (selectedFile) {
        const fileSizeKB = (selectedFile.size / 1024).toFixed(2);
        const fileSizeMB = (selectedFile.size / (1024 * 1024)).toFixed(2);
        const sizeDisplay = fileSizeMB < 1 ? `${fileSizeKB} KB` : `${fileSizeMB} MB`;

        if (!allowedTypes.includes(selectedFile.type)) {
          message.textContent = `‚ùå Tipo de arquivo n√£o permitido: ${selectedFile.type}`;
          message.classList.add('error');
          downloadBtn.disabled = true;
          return;
        }

        if (selectedFile.size > maxSizeMB * 1024 * 1024) {
          message.textContent = `‚ùå Arquivo muito grande (${sizeDisplay}). Limite: ${maxSizeMB} MB.`;
          message.classList.add('error');
          downloadBtn.disabled = true;
          return;
        }

        downloadBtn.disabled = false;
        message.textContent = `üìÅ Arquivo "${selectedFile.name}" selecionado (${sizeDisplay}).`;
      }
    });

    downloadBtn.addEventListener('click', function () {
      if (!selectedFile) return;

      const url = URL.createObjectURL(selectedFile);
      const a = document.createElement('a');
      a.href = url;
      a.download = selectedFile.name;
      a.click();

      message.textContent = `‚úîÔ∏è Download de "${selectedFile.name}" conclu√≠do!`;
      fileInput.value = '';
      downloadBtn.disabled = true;
    });
  </script>

</body>
</html>